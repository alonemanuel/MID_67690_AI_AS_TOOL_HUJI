<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane fx:id="borderPane" style="-fx-background-color: aquamarine;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Manager.managerController">
    <top>
        <Text fill="#09080880" strokeType="OUTSIDE" strokeWidth="0.0" text="Slime Mould Everything" textAlignment="CENTER" BorderPane.alignment="CENTER">
            <font>
                <Font name="Agency FB" size="76.0" />
            </font>
        </Text>
    </top>
    <opaqueInsets>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </opaqueInsets>
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
    </padding>
   <right>
      <VBox alignment="CENTER" spacing="50.0" BorderPane.alignment="CENTER">
         <children>
                <Button fx:id="exitButton" mnemonicParsing="false" onAction="#closeProgram" prefHeight="54.0" prefWidth="138.0" text="Exit" textAlignment="CENTER">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Button>
            <Button fx:id="restartButton" mnemonicParsing="false" onAction="#restartButton" text="Restart" />
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </VBox>
   </right>
   <left>
      <VBox alignment="CENTER" spacing="100.0" BorderPane.alignment="CENTER">
         <children>
            <ComboBox fx:id="foodChoiceBox" onAction="#placeFood" prefHeight="50.0" prefWidth="150.0" promptText="Place food" />
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#placeMould" prefHeight="50.0" prefWidth="150.0" text="Place Mould" textAlignment="CENTER">
               <font>
                  <Font name="Arial" size="18.0" />
               </font></Button>
                <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#updateManager" prefHeight="50.0" prefWidth="150.0" text="Expand" textAlignment="CENTER">
                    <font>
                        <Font name="Arial" size="18.0" />
                    </font>
                </Button>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </VBox>
   </left>
   <effect>
      <Blend />
   </effect>
   <center>
      <Pane fx:id="pane" prefHeight="600.0" prefWidth="800.0" BorderPane.alignment="CENTER">
      </Pane>
   </center>
</BorderPane>
